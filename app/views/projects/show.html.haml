%p#notice= notice

%p
  %b Name:
  = @project.name
%p
  %b Address:
  = @project.address
%p
  %b Started on:
  = @project.started_on
%p
  %b Completed on:
  = @project.completed_on
%p
  %b Finished:
  = @project.finished
%p
  %b Owner name:
  = @project.owner_name
%p
  %b Size:
  = @project.size

= link_to 'Edit', edit_project_path(@project)
\|
= link_to 'Back', projects_path



%hr/
%h1 Listing materials

%table
  %tr
    %th Name
    %th Purchase date
    %th Per unit price
    %th Quantity
    %th Total cost
    %th Category
    -# %th Project
    %th
    %th
    %th

  - @project.materials.each do |material|
    %tr
      %td= material.name
      %td= material.purchase_date
      %td= material.per_unit_price
      %td= material.quantity
      %td= material.quantity * material.per_unit_price
      %td= material.category
      -# %td= material.project
      %td= link_to 'Show', [material.project, material]
      %td= link_to 'Edit', edit_project_material_path(material.project, material)
      %td= link_to 'Destroy', [material.project, material], data: { confirm: 'Are you sure?' }, method: :delete

%br

= link_to 'New Material', new_project_material_path(@project)

%hr/
%h1 Listing labours

%table
  %tr
    %th Weekend date
    %th Weekly expense
    %th Project
    %th
    %th
    %th

  - @project.labours.each do |labour|
    %tr
      %td= labour.weekend_date
      %td= labour.weekly_expense
      -# %td= labour.project
      %td= link_to 'Show', [labour.project, labour]
      %td= link_to 'Edit', edit_project_labour_path(labour.project, labour)
      %td= link_to 'Destroy', [labour.project, labour], data: { confirm: 'Are you sure?' }, method: :delete

%br

= link_to 'New Labour', new_project_labour_path(@project)
